.prize-pic {
  width: 16rem;
  height: 20rem;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 1rem;
}


.prize-name {
  margin-top: 0.8rem;
  font-size: 0.8em;
}

.prize-time {
  margin-top: 0.8rem;
  font-size: 0.6em;
  color: #ccc;
}

.prize-sponsor {
  border: 1px solid #ccc;
  width: 30%;
  padding: 0.2rem;
  text-align: center;
  font-size: 0.8em;
  float: right;
  color: #058;
}

page {
  background: rgb(242, 242, 242);
}

.one {
  background: white;
  padding: 1rem;
  border-radius: 5px;
}

.two {
  border-radius: 5px;
}

.ad-text {
  padding: 1rem;
  background: rgb(255, 235, 205);
  margin-top: 1rem;
  border-radius: 8px;
  font-size: 30rpx;
}

.attend {
  width: 7rem;
  height: 7rem;
  border-radius: 256px;
  background: tomato;
  text-align: center;
  line-height: 7rem;
  color: white;
  font-size: 0.8em;
  margin: 0 auto;
  margin-top: 3rem;
}

.people-number {
  color: gray;
  font-size: 0.8em;
  text-align: center;
  margin-top: 1rem;
}

.three {
  background: white;
  text-align: center;
  font-size: 0.7em;
  color: #ccc;
  padding: 1rem;
  border-radius: 5px;
  width: 80%;
  margin: 3rem auto;
}

.more {
  text-align: center;
  vertical-align: middle;
  vertical-align: -20%;
  margin-left: 1rem;
  margin-right: 1rem;
  font-size: 0.8em;
  color: #058;
}

.line {
  display: inline-block;
  width: 3rem;
  border: 1px solid #c0c0c0;
}

.content {
  margin-top: 2rem;
  text-align: left;
  color: black;
}

.sponsor-introduce {
  margin-top: 1rem;
  margin-bottom: 1rem;
  text-align: left;
  color: #058;
}

.participator {
  text-align: center;
}

.rank {
  background: white;
  padding: 2rem;
  width: 70%;
  margin: 3rem auto;
  border-radius: 5px;
}

.result-ul {
  list-style-type: none;
  margin-top: 1rem;
  line-height: 2rem;
  margin-right: 2rem;
  color: #058;
}

.result-no {
  font-size: 2.5em;
  color: #444;
}
.no-open-img{
  width: 8rem;
  height: 8rem;
}
.result-yes {
  font-size: 2em;
  color: green;
}

.i {
  width: 1.3rem;
  height: 1.3rem;
  margin-right: 0.5rem;
}

.people {
  float: right;
}

.people-no-order {
  color: red;
}

.no-open-info {
  color: #058;
  font-size: 2em;
}
