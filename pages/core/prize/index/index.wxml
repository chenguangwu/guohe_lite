<view id="app">
  <view class="one">
    <image class="prize-pic" src="{{prize.img}}"></image>

    <view class="first">
      <text class="prize-sponsor">{{prize.sponsor}} 赞助</text>
      <text class="prize-name">奖品：{{prize.name}} \n 数量：{{prize.number}}</text>

    </view>


    <text class="prize-time">本月30日10:00 自动开奖</text>
  </view>
  <view class="two">
    <view class="ad-text">
      {{prize.saySponsor}}
    </view>

    <view class="attend" bindtap="join">{{message}}</view>
    <view class="people-number">已有 {{totalJoiners}} 人参与</view>
    <view class="joiners">
      <navigator class="joiners" url="/pages/core/prize/detail/detail">看一看都有谁></navigator>
    </view>

  </view>
  <view class="three">

    <text class="line"></text>
    <text class="more">了解更多</text>
    <text class="line"></text>
    <text class="sponsor-introduce">赞助者介绍：</text>
    <view class="content">
      {{prize.introSponsor}}
    </view>

  </view>

  <official-account></official-account>
  
</view>