/**index.wxss**/

.flex-item {
    width: 95rpx;
    height: 100rpx;
}

.kcb-item {
    position: absolute;
    display: flex;
    border-radius: 15rpx;
}

/* 控制课表内的字体大小 */

.kb-cube {
    display: flex;
    justify-content: center;

    padding: 10rpx;
    width: 100rpx;
    height: 200rpx;
}

.smalltext {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    font-size: 22rpx;
    color: #fff;
}

.top {
    display: flex;
    flex-direction: row;
    margin-left: 35rpx;
    background-color: white;
    color: rgb(163, 163, 230);
}

.top-text {
    width: 100rpx;
    height: 35rpx;
    font-size: 20rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}

.scroll {
    width: 100%;
    height: 100%;
    z-index: 101;
    position: fixed;
    margin-bottom: 20rpx;
}

/* 课表侧边栏 */

.left {
    width: 35rpx;
    height: 100rpx;
    font-size: 20rpx;
    justify-content: center;
    display: flex;
    align-items: center;
    background-color: rgb(255, 255, 255);
    color: #848583;
}

.kb {
    width: 100%;
    height: 100%;
    background-color: rgb(250, 250, 250);
}

.section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: 5rpx;
}

.picker {
    font-size: 30rpx;
    margin: 20rpx;
}
